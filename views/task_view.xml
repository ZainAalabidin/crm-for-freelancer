<odoo>

    <record id="task_action" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">task</field>
    </record>

    <menuitem id="task_menu" name="Tasks" action="task_action" parent="project_menu"/>

    <record id="task_view_tree" model="ir.ui.view">
        <field name="name">task tree</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="project_id" string='Project Name'/>
                <field name="hours_spent" />
                <field name="is_done" string='Is Done' />
            </tree>
        </field>
    </record>

    <record id="task_view_form" model="ir.ui.view">
        <field name="name">task form</field>
        <field name="model">task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="project_id" string='Project Name' />
                        <field name="hours_spent" />
                        <field name="is_done" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
